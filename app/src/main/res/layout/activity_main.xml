<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/pokemonDarkGrey"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <AbsoluteLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_x="0dp"
            android:layout_y="-27dp"
            android:layout_height="match_parent"
            android:src="@drawable/background_top"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="165dp"
            android:src="@drawable/background_bottom"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_x="50dp"
            android:layout_y="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/user"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_x="240dp"
            android:layout_y="-57dp"
            android:layout_height="wrap_content"
            android:src="@drawable/enemy"/>

        <ImageView
            android:layout_width="175dp"
            android:layout_x="20dp"
            android:layout_y="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bubble_enemy"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_x="175dp"
            android:layout_y="105dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bubble_user"/>

    </AbsoluteLayout>



</RelativeLayout>
