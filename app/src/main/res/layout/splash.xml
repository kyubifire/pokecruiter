<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/pokemonDarkGrey"
    android:weightSum="1">>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <TextView
            android:id="@+id/pickchar"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_x="120dp"
            android:layout_y="50dp"
            android:text="Pick your character!"/>

        <ImageView
            android:layout_width="80dp"
            android:id ="@+id/player_male"
            android:layout_y = "90dp"
            android:layout_x="80dp"
            android:layout_height="100dp"
            android:src="@drawable/user_male"/>

        <ImageView
            android:layout_width="80dp"
            android:id ="@+id/player_female"
            android:layout_y = "90dp"
            android:layout_x="200dp"
            android:layout_height="100dp"
            android:src="@drawable/user_female"/>

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_x="215dp"
            android:layout_y="190dp"
            android:text="FEMALE"/>

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_x="105dp"
            android:layout_y="190dp"
            android:text="MALE"/>

        <TextView
            android:id="@+id/pickchar"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_x="120dp"
            android:layout_y="225dp"
            android:text="What is your name?"/>

        <EditText
            android:textColor="@android:color/white"
            android:layout_width= "wrap_content"
            android:layout_height="45dp"
            android:layout_x = "100dp"
            android:layout_y = "250dp"
            android:text="INSERT NAME HERE"
            android:inputType="text"/>

    </AbsoluteLayout>
</LinearLayout>